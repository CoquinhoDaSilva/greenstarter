{% extends 'common/base.html.twig' %}



{% block body %}

{% for event in events %}
    <section class="blogsection">
        <div class="displayFlexCenter">
            <div class="container-perso">
                <h2 class="reveal title">{{ event.title}}</h2>
                <div class="reveal-left">
                    <div class="zindex reveal reveal-right blogfloat bdesktop4 desktop6 tablet6 phone12">
                        <img class="img-fluid" alt="photo de l'article" title="photo de l'article" src="{{ asset('img/'~event.pic) }}">
                    </div>
                    <p class="reveal">Rédigé par Balcany pas en prison le {{ event.date |date('d m Y') }}</p>
                    <p class="text reveal">
                        {{ event.content }}
                    </p>
                    {% if is_granted('ROLE_ADMIN') %}
                    <div class="displayFlexCenter">
                        <div class="displayFlexCenter">
                            <a href="{{ path('event_update', {'id':event.id}) }}"><p class="btnarticle">Modifier l'évènement</p></a>
                        </div>
                        <div class="displayFlexCenter">
                            <a href="{{ path('event_delete', {'id':event.id}) }}"><p class="btnarticle">Supprimer l'évènement</p></a>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    {% endfor %}



{% endblock %}